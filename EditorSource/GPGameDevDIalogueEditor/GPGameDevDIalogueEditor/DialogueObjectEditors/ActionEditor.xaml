<UserControl x:Class="GPGameDevDialogueEditor.DialogueObjectEditors.ActionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPGameDevDialogueEditor.DialogueObjectEditors"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="270">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="270">
        <TextBox x:Name="ActionName" Background="#1900FFFF" Width="90" Margin="1,1,1,0"  GotKeyboardFocus="TextBox_GotKeyboardFocus" LostKeyboardFocus="TextBox_LostKeyboardFocus" Foreground="Gray" Text="Action Name"></TextBox>
        <TextBox x:Name="ActionValue" Background="#1900FFFF" Width="90" Margin="1,1,1,0"  GotKeyboardFocus="TextBox_GotKeyboardFocus" LostKeyboardFocus="TextBox_LostKeyboardFocus" Foreground="Gray" Text="Action Value"/>
        <Button Margin="1,1,1,0" Click="RemoveCustomAction">Remove</Button>
    </StackPanel>
</UserControl>

<UserControl x:Class="GPGameDevDialogueEditor.UICustomObjects.DialogueSimulationUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPGameDevDialogueEditor.UICustomObjects"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition MaxHeight="20"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <TextBlock x:Name="TestDialogueOutput" Grid.Row="0" Visibility="Visible" Foreground="White" TextWrapping="WrapWithOverflow">
                <TextBlock.Background>
                    <SolidColorBrush Color="Black" Opacity="0.70"/>
                </TextBlock.Background></TextBlock>
        </ScrollViewer>
        <TextBox x:Name="InputTextBox" Grid.Row="1" Background="Black" Foreground="White" KeyDown="TextBox_KeyDown"></TextBox>
    </Grid>
</UserControl>
